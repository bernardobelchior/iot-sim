{
  "name": "iot-simulator",
  "version": "0.1.0",
  "description": "Main controller for IoT simulator",
  "author": "#####",
  "license": "MIT",
  "scripts": {
    "example": "node examples/run.js",
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/src/index.js",
    "watch-node": "nodemon dist/src/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "prettier": "prettier src/**/*.ts --write",
    "test": "NODE_ENV=test jest --forceExit --verbose --detectOpenHandles --watchAll",
    "coverage": "NODE_ENV=test jest --forceExit --verbose --detectOpenHandles --coverage"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "async-mqtt": "^2.2.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-promise-router": "^3.0.3",
    "express-validator": "^5.3.1",
    "later": "^1.2.0",
    "mathjs": "^5.9.0",
    "mongoose": "^5.4.22",
    "request": "^2.88.0",
    "strict-event-emitter-types": "^2.0.0",
    "toml": "^3.0.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/mathjs": "^5.0.1",
    "@types/mocha": "^5.2.6",
    "@types/mongodb": "^3.1.22",
    "@types/mongoose": "^5.3.24",
    "@types/node": "^11.13.0",
    "@types/request": "^2.48.1",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.12",
    "concurrently": "^4.1.0",
    "jest": "^24.7.1",
    "nodemon": "^1.18.10",
    "prettier": "1.16.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "typescript": "^3.4.2",
    "wait-for-expect": "^1.1.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "testEnvironment": "node"
  }
}
