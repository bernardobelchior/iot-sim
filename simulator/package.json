{
  "name": "iot-simulator",
  "version": "0.1.0",
  "description": "Main controller for IoT simulator",
  "author": "#####",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/src/server.js",
    "watch-node": "nodemon dist/src/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json --fix",
    "prettier": "prettier src/**/*.ts --write",
    "test": "ENVIRONMENT=test jest --forceExit --verbose --detectOpenHandles --watch",
    "coverage": "ENVIRONMENT=test jest --forceExit --verbose --detectOpenHandles --coverage"
  },
  "dependencies": {
    "ajv": "^6.9.2",
    "amqplib": "^0.5.3",
    "async-mqtt": "^2.2.0",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-promise-router": "^3.0.3",
    "express-validator": "^5.3.1",
    "mongoose": "^5.4.16",
    "request": "^2.88.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.10",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.9",
    "@types/mocha": "^5.2.6",
    "@types/mongodb": "^3.1.19",
    "@types/mongoose": "^5.3.20",
    "@types/node": "^11.9.5",
    "@types/request": "^2.48.1",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "prettier": "1.16.4",
    "supertest": "^3.4.2",
    "ts-jest": "^24.0.0",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333",
    "wait-for-expect": "^1.1.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "testEnvironment": "node"
  }
}
